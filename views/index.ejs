<html ng-app="gottaEat">
    <head>
        <title>GottaEat</title>
        <script src="/modules/angular/angular.js"></script>
        <script src="https://use.fontawesome.com/65c60834b5.js"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB20RLa3am7lyDxjTsLNrDN3m7KO8CGLFc&libraries=places"></script>

        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/assets/css/main.css" />

    </head>
    <body ng-controller="mainController">
        <div ng-if="!isLoading" class="btn-container">
            <button ng-click="getRestaurants()" type="button" class="btn btn-custom">GottaEat</button>
        </div>
        <div ng-if="isLoading" class="loading-container">
            <i class="fa fa-cutlery loader" aria-hidden="true"></i>
        </div>

        <div ng-if="showModal" id="infoModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" ng-click="showHideModal()">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                        <p>Some text in the modal.</p>
                    </div>
                </div>
            </div>
        </div>

        <div id="map"></div>
        <script src="/assets/js/app.js"></script>
        <script src="/assets/js/controllers/mainController.js"></script>
    </body>
</html>
